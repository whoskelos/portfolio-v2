---
import Header from "../components/Header.astro";
import Job from "../components/Job.astro";
import Project from "../components/Project.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Kelvin Guerrero | Desarrollador Full-stack">
    <Header />
    <main id="content" class="lg:max-w-[70%] lg:m-auto">
        <!--Seccion HERO -->
        <section
            class="my-0 flex flex-col lg:flex-row lg:h-[850px]"
            id="heroSection"
        >
            <div class="p-10 lg:w-[80%] lg:h-[500px] lg:self-center">
                <h1
                    class="text-sky-600 dark:text-sky-300 text-2xl font-bold tracking-widest leading-10"
                >
                    Hola,
                </h1>
                <p
                    class="py-2 text-3xl font-bold text-slate-600 dark:text-slate-300"
                >
                    soy Kelvin Guerrero
                </p>
                <p
                    class="text-3xl font-bold text-slate-500 dark:text-slate-600"
                >
                    Desarrollador Web
                </p>
                <p class="mt-5 text-lg">
                    Creando experiencias web completas desde la interfaz hasta
                    el nucleo funcional.
                </p>
                <!--Redes sociales -->
                <div class="py-6 [&>a]:pr-2 text-2xl [&>a>i]:px-2">
                    <a
                        href="https://www.linkedin.com/in/kelvinguerreromite/"
                        class="hover:text-sky-600 transition-colors"
                        target="_blank"><i class="bi bi-linkedin"></i></a
                    >
                    <a
                        href="https://github.com/whoskelos"
                        class="hover:text-sky-600 transition-colors"
                        target="_blank"><i class="bi bi-github"></i></a
                    >
                </div>
                <div class="">
                    <button
                        type="button"
                        id="btn-contratar"
                        class="border-2 rounded border-sky-500 p-4 w-[250px] text-lg tracking-widest hover:bg-sky-500 hover:dark:text-slate-900 ease-out duration-300"
                        >Contratar</button
                    >
                </div>
            </div>
            <!--Contenedor para la imagen -->
            <div class="w-full">
                <div
                    class="w-[300px] h-[320px] m-auto bg-[url('/img/kelvin-2.png')] lg:bg-[url('/img/kelvin-2.png')] bg-cover rounded-lg lg:w-[100%] lg:h-[100%] lg:bg-top lg:bg-no-repeat lg:bg-[length:600px_600px]"
                >
                </div>
            </div>
        </section>
        <!--Seccion experiencial laboral -->

        <h2
            class="text-3xl text-slate-700 dark:text-white font-bold tracking-widest w-[85%] m-auto text-center pt-8"
        >
            Experiencia laboral
        </h2>
        <section
            class="my-12 flex flex-col w-[84%] m-auto lg:flex-row lg:w-[87%] lg:my-28 overflow-x-hidden md:overflow-hidden"
            id="jobSection"
        >
            <div class="flex justify-between lg:flex-col lg:w-[20%] jobs-buttons">
                <button
                    type="button"
                    id="link1"
                    data-id="job1"
                    class="border-b-2 hover:dark:bg-slate-700 w-full px-4 py-3 hover:bg-white focus:bg-white focus:border-sky-500 focus:dark:bg-slate-700 lg:border-l-2 lg:border-b-0 lg:h-full lg:text-left border-sky-500 bg-white dark:bg-slate-700 transition-colors"
                    >Idealista</button
                >
                <button
                    type="button"
                    data-id="job2"
                    class="border-b-2 hover:dark:bg-slate-700 w-full px-4 py-3 hover:bg-white focus:bg-white focus:border-sky-500 focus:dark:bg-slate-700 lg:border-l-2 lg:border-b-0 lg:h-full lg:text-left transition-colors"
                    >MailComms</button
                >
                <button
                    type="button"
                    data-id="job3"
                    class="border-b-2 hover:dark:bg-slate-700 w-full px-4 py-1 hover:bg-white focus:bg-white focus:border-sky-500 focus:dark:bg-slate-700 lg:border-l-2 lg:border-b-0 lg:h-full lg:text-left transition-colors"
                    >MailComms</button
                >
            </div>

            <!--CONTENEDOR DESCRIPCION DE LOS TRABAJOS -->
            <div class="my-5 md:h-56 lg:px-10 lg:my-0 lg:max-w-[800px]">
                <!-- JOB 1 -->
                <Job
                    idJob="job1"
                    position="Frontend Developer"
                    company="Idealista"
                    oculto={false}
                    date="Septiembre 2024 - Actualidad"
                    taskList={[
                        "Desarrollo e implementación de interfaces de usuario utilizando.JavaScript ES6+, CSS3 y Less",
                        "Testing con Jest.",
                        "Herramientas de bundling como Webpack.",
                    ]}
                />
                <!-- JOB 2 -->
                <Job
                    idJob="job2"
                    position="Desarrollador Web"
                    company="Grupo MailComms"
                    oculto={true}
                    date="Diciembre 2023 - Septiembre 2024"
                    taskList={[
                        "Desarrollo front-end utilizando Vue.js, Javascript Vanilla y jQuery.",
                        "Desarrollo de API RESTful utilizando Laravel para la comunicación entre el front-end y el back-end.",
                        "Desarrollo de funciones en PHP para interactuar con la API de AWS S3 Glacier.",
                        "Diseño e implementación de bases de datos MySQL para almacenar y recuperar datos.",
                        "Diseños web responsivos utilizando Bootstrap.",
                        "Metodología Agile con la herramienta “YouTrack” a través de sprints",
                    ]}
                />
                <!-- JOB 3 -->
                <Job
                    idJob="job3"
                    position="Desarrollador en prácticas"
                    company="Grupo MailComms"
                    oculto={true}
                    date="Octubre 2023 - Diciembre 2023"
                    taskList={[
                        "HTML",
                        "CSS",
                        "Javascript",
                        "Vue.js",
                        "PHP",
                        "Laravel",
                        "Quadient Inspire Desginer",
                    ]}
                />
            </div>
        </section>

        <!-- Seccion Proyectos -->
        <h3
            id="projectSection"
            class="text-3xl text-slate-700 dark:text-white font-bold tracking-widest w-[85%] m-auto text-center pt-8"
        >
            Mis Proyectos
        </h3>
        <section
            class="w-[90%] m-auto my-12 flex flex-col items-center justify-center lg:flex-row gap-4"
        >
            <!-- Proyectos -->
            <Project
                img="barreto-construcciones.webp"
                altText="Barreto Infraestructuras"
                projectName="Barreto Construcciones"
                technologies={["Wordpress", "Blocksy", "UX/UI"]}
                githubLink=""
                visitLink="https://www.barretoconstrucciones.es/"
            />
            <Project
                img="ziamari-construcciones.webp"
                altText="Ziamari Construcciones y Reformas"
                projectName="Ziamari Construcción"
                technologies={["Astro", "Tailwind", "UX/UI"]}
                githubLink="https://github.com/whoskelos/landing-ziamari-construcciones"
                visitLink="https://www.ziamariconstruccion.com/"
            />
            <Project
                img="recambios-las-margaritas.webp"
                altText="Landing page de recambios las margaritas"
                projectName="Recambios las Margaritas"
                technologies={["Astro", "Tailwind", "UX/UI"]}
                githubLink="https://github.com/whoskelos/landing-recambios-margaritas"
                visitLink="https://recambioslasmargaritas.es/"
            />
        </section>

        <!-- Seccion sobre mi -->
        <h3
            id="aboutMeSection"
            class="text-3xl text-slate-700 dark:text-white font-bold tracking-widest w-[85%] m-auto text-center pt-8"
        >
            Sobre Mi
        </h3>

        <section class="w-[90%] m-auto my-12">
            <div class="text-lg text-balance leading-relaxed">
                <p>
                    Profesional con experiencia en el desarrollo de aplicaciones
                    web <strong>full-stack.</strong> Poseo un sólido conocimiento
                    de <strong>Javascript</strong> para la creación de interfaces
                    web interactivas y atractivas.
                </p>
            </div>
        </section>

        <!-- Seccion de contactos -->
        <h3
            id="contactSection"
            class="text-3xl text-slate-700 dark:text-white font-bold tracking-widest w-[85%] m-auto text-center pt-8"
        >
            Contacto
        </h3>

        <section class="my-12 flex flex-col w-[90%] m-auto">
            <form
                action="https://formsubmit.co/f09f62d1aba50a8f6281da703a3a2ae0"
                method="POST"
                class="w-[90%] md:max-w-[600px] m-auto"
            >
                <div class="">
                    <input
                        type="email"
                        name="email"
                        id="email"
                        required
                        placeholder="email@gmail.com"
                        class="text-slate-700 py-3 p-3 w-full rounded-lg focus:outline-none focus:ring focus:ring-blue-400"
                    />
                </div>
                <div class="py-3">
                    <input
                        type="text"
                        name="nombre"
                        id="nombre"
                        placeholder="Nombre"
                        required
                        class="text-slate-700 py-3 p-3 w-full rounded-lg focus:outline-none focus:ring focus:ring-blue-400"
                    />
                </div>
                <div>
                    <textarea
                        name="msj"
                        id="msj"
                        rows="5"
                        placeholder="Mensaje"
                        required
                        class="text-slate-700 py-3 p-3 w-full rounded-lg focus:outline-none focus:ring focus:ring-blue-400"
                    ></textarea>
                </div>
                <div class="my-3">
                    <button
                        type="submit"
                        class="bg-sky-600 hover:bg-sky-700 text-white p-3 w-full rounded-lg text-xl tracking-widest"
                        >Enviar Mensaje</button
                    >
                    <input type="hidden" name="_captcha" value="true" />
                    <input type="text" name="_honey" style="display:none">
                </div>
            </form>
        </section>
        <!--Boton para subir -->
        <button
            id="upBtn"
            class="w-[60px] h-[60px] bg-sky-600 hover:bg-sky-700 fixed bottom-5 right-5 hover:cursor-pointer shadow-md text-white rounded-full uppercase font-medium tracking-widest transition-colors hidden"
            >Subir</button
        >

        <!-- Footer -->
        <footer class="text-center mt-12 mb-5">
            <p>Kelvin Guerrero 2023. All rights reserved ®️</p>
            <div class="my-2 text-2xl [&>a]:px-2">
                <a
                    href="https://www.linkedin.com/in/kelvinguerreromite/"
                    target="_blank"
                    ><i
                        class="bi bi-linkedin hover:text-sky-600 transition-colors"
                    ></i></a
                >
                <a href="https://github.com/whoskelos" target="_blank"
                    ><i
                        class="bi bi-github hover:text-sky-600 transition-colors"
                    ></i></a
                >
            </div>
        </footer>
    </main>
</Layout>

<style>
    .jobs-buttons {
        overflow-x: scroll;
    }
    .jobs-buttons::-webkit-scrollbar {
        display: none;
    }
</style>
